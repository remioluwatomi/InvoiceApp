@using Microsoft.AspNetCore.Mvc.Razor
@inherits RazorPage<dynamic>

@{
	Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = ViewData["Title"] ?? "Error"; 
}



@section TailwindCDN {
    <script src="https://cdn.tailwindcss.com"></script>
}



<section class="flex items-center h-full p-16 dark:bg-gray-50 dark:text-gray-800" style="">
	<div class="flex flex-col items-center justify-center px-5 mx-auto my-8">
		<div class="max-w-md text-center">
			<h2 class="mb-8 font-extrabold text-9xl dark:text-gray-400">
				<span class="sr-only">Error</span>@RenderSection("StatusCode", required: false)
			</h2>
			<p class="text-2xl font-semibold md:text-3xl">@RenderSection("ErrorMessage", required: false)</p>
			<p class="mt-4 mb-8 dark:text-gray-600">But dont worry, you can go back to our homepage.</p>
			<a rel="noopener noreferrer" href="/" class="px-8 py-3 font-semibold rounded bg-violet-600 dark:text-gray-50" style="">Back to homepage</a>
		</div>
	</div>
</section>
